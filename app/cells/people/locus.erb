<div class="object">

  <div id ="my_locus">
    <%= form_for Marker.new, :url => locus_markers_path, :method => 'post',:remote => true do |form| %>
      <%= form.date_field :day %>
      <%= submit_tag '查找' %>
    <%end%>

    <script type="text/javascript">
      // $('#marker_day').datepicker({changeYear:true, yearRange:'1900:2025', dateFormat:'<%= datepicker_format %>'});
      $('#marker_day').datepicker({changeYear:true, yearRange:'1900:2025', dateFormat:'yy/mm/dd'});
      $('#marker_day').bind('keyup', function(){
        var val = $(this).val();
        if(val == '' || val.match(/1900/)) {
          $('#child-selection').show();
        } else {
          $('#child-selection select').val('');
          $('#child-selection').hide();
        }
      }).trigger('keyup');  
    </script>
    <%@postitions.each do |postitions|%>
      <%if postitions.current_address !=''%>
        <div class="position"> 
          我在： <%= postitions.current_address %>
        </div>
        <br>
      <%end%>
    <%end%>
  </div>
</div>