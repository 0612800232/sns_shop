<div id = 'stream_item_<%=marker.id%>' class='stream-item' style='margin-bottom: 0px;min-height:70px;height:auto;min-width:200px;width:auto;'>
	<div class='stream-item-meta'>
	<%= render :partial => 'streams/person_thumbnail', :locals => {:stream_item => marker.object} %>
	<div style='clear:left;'></div>
	</div>
	<div class='stream-item-body'><div class='stream-item-content'>
	<%= strip_html(marker.html,15,"...")%>
	<%=link_to t('comments.view') + '...', marker.object, :class => 'small' ,:target=>'_blank'%> 
	</div>
	<div class='nowrap stream-item-timestamp'>
	 <%= time_ago_in_words marker.object.created_at %> <%= t('comments.ago') %>
	<%= link_to marker.object.person.name, marker.object.person,:target=>'_blank' %> 
	</div>

	<div class = 'marker_address'>
		<%= get_address_href(marker.geocode_position)%>
	</div> 
	<div class ='marker_common' >
 	<span><a href='#' onclick='MapObject.marker_del(<%=marker.id%>)'>delete</a></span> 
 	<span><a href='#' onclick='MapObject.marker_move(<%=marker.id%>)'>move</a></span>
	</div>
</div>
    
