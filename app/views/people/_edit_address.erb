<div id="postition"  class ="object" style="display: none; ">

  <%= form.label :home_postition,       t('people.home_postition') %> 

  <%= form.text_field :home_address,:size=>22 %>
  <br/>

</div>
<script type="text/javascript">
  
  postition_home_postition = $("#postition_home_address")
  if(postition_home_postition.attr("value") == ""){
    postition_home_postition.attr("value","请输入您的居住地址")
    postition_home_postition.attr("style"," color:Gray")
  }
  postition_home_postition.focus(function(){
    if(postition_home_postition.attr("value") == "请输入您的居住地址"){
     postition_home_postition.attr("value","")
    postition_home_postition.attr("style"," color:Black")
    }
   
  })
  postition_home_postition.blur(function(){
    if(postition_home_postition.attr("value") == ""){
      postition_home_postition.attr("value","请输入您的居住地址")
    postition_home_postition.attr("style"," color:Gray")
    }
  })
  

</script>
