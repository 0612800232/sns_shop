<% content_for  :head do %>
  <%= javascript_include_tag "extend/map" %>
  <%= javascript_include_tag "map/markercluster" %>
  <%= javascript_include_tag "extend/jquery.form" %>
  <%= javascript_include_tag  'http://maps.google.com/maps/api/js?sensor=false' %>
  <%= javascript_include_tag  'map/map_controll' %>
<script src="http://www.google.com/jsapi"></script>
<script type="text/javascript">
    google.load('search', '1');
</script>
 <script src="http://www.google.com/uds/api?file=uds.js&amp;v=1.0&amp;" type="text/javascript"></script>
  <%= javascript_include_tag 'map/map_search' %>
  <%= stylesheet_link_tag 'global-0.52' %>
  <%= stylesheet_link_tag  "osx" %>
  




  <script type="text/javascript">
    $(document).ready(function() {
     
      $("ul.tabs").tabs("div.panes > div.object");
      MapObject.map_share_html = document.getElementById("map_infowindow").innerHTML
      $('#map_infowindow').remove()
  <% if @map.center_latitude %> MapObject.map_options.center_latitude = <%= @map.center_latitude%>;<%end%>
  <% if  @map.center_longitude %> MapObject.map_options.center_longitude = <%= @map.center_longitude%>;<%end%>
  <% if @map.zoom %>MapObject.map_options.zoom = <%= @map.zoom%>;<%end%>

  <%if @person == @logged_in%>
      MapObject.initialize(null) ;
  <%else%>
      MapObject.initialize('<%=@person.id%>') ;
  <%end%>
    
    
    

	
  });

  </script>
<% end %>



<div id ="map_infowindow" style="display: none" >
  <%= render :partial=>"common/new_place" %>
</div>

<div id="map_controll">
  <ul class="buttons">
    <li><span class="button" id="new-marker-tab" onclick="MapObject.add_marker_listen();">发布地点</span></li>
    <li><span class="button" onclick="MapObject.init_marker_from_data('firend_postition');">查看好友位置</span></li>
    <li><span class="button" id="posittion-tab">我要旅游</span></li>
    <li><span class="button" id="activities-tab">我要活动</span></li>
  </ul>
</div>

<div id="searchwell"></div> 

<div id="mapCanvas" style="width: 100%; height: 385px;">map div</div> 


<br></br>






<div class="profile" >

  <div class ='profile-left'>

    <%= render :partial => 'person_photo' %>
    <%= render :partial => 'my_friends' %>
    <%= render :partial => 'albums_manager' %>




    <h3>活动
      <p style="float: right"><%= link_to '活动管理', "#", :class => 'add-icon' %></p>
    </h3>

    <h3>想去那里
      <p style="float: right"><%= link_to '行程管理', "#", :class => 'add-icon' %></p>
    </h3>
    <table>
      <tr>
        <th>day</th>
        <th>address</th>
      </tr>

      <% @plans.each do |plan| %>
        <tr>
          <th><%= plan.day.strftime("%y-%M-%d")%></th>
          <th><%= link_to plan.address,"#" %></th>
          <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
          <td><%= link_to 'Destroy', plan, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
      <% end %>
    </table>


  </div>

  <div class= 'profile-right'>
    <div class='tab_profile'>
      <ul class="tabs">
        <li class = "li_php"><a href="#"><%= t('people.php') %></a></li>
        <li class = "li_profile"><a href="#"><%= t('people.profile') %></a></li>
      </ul>
    </div>
    <br/>
    <div class="panes">
      <%= render :partial => 'show_php'%>
      <%= render :partial => 'show_profile'%>
    </div>
  </div>
</div>


