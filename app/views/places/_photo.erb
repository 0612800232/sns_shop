<div class="profile-pic">
  <% if @place.photo.exists? %>
    <%= image_tag @place.photo.url(:profile), :alt => @place.name %>
  <% elsif @logged_in.can_edit?(@place) and params[:controller] == 'groups' and params[:action] == 'show' %>
    <div class="silhouette-group" onclick="location.href = '<%= edit_place_path %>#picture'">
      <%= link_to t('groups.change_this_picture'), edit_place_path(:anchor => 'picture'), :class => 'edit-icon' %>
    </div>
  <% else %>
    <div class="silhouette-group"></div>
  <% end %>
</div>
