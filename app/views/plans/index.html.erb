<h1>Listing plans</h1>

<table>
  <tr>
    <th>day</th>
    <th>province</th>
    <th>city</th>
	<th>address</th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
	<th><%= plan.day%></th>
    <th><%= plan.province%></th>
    <th><%= plan.city%></th>
	<th><%= plan.address%></th>
    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Plan', new_plan_path %>
